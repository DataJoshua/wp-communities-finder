<!DOCTYPE html>
<html>
  <head>
    <title>WpCommunitiesFinder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render "layouts/nav" %>
    <div class="main-banner">
      <div>
        <% flash.each do |type, msg| %>
          <div class="container">
            <div class="validation-error alert alert-<%= type %> mx-5 my-3">
              <%= msg %>
            </div>
          </div>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
