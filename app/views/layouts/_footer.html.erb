<footer class="bg-slate-800 sticky bottom-0">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <h2 class="text-2xl font-bold text-white">Logo </h2>
            </div>
            <ul class="flex flex-wrap items-center mb-4 text-sm font-medium text-gray-500 sm:mb-0 text-white">
                <li>
                    <%= link_to "Publish a community", new_community_path, class: "mr-4 hover:underline md:mr-6 text-white" %>
                </li>
                <li>
                    <%= link_to "Communities", communities_path, class: "mr-4 hover:underline md:mr-6 text-white" %>
                </li>
                <% if allowed_to?(:new?, with: UserPolicy) %>
                  <li>
                   <%= link_to "Sign up", register_path, class: "mr-4 hover:underline md:mr-6 text-white" %>
                  </li>
                  <li>
                    <%= link_to "Log in", login_path, class: "mr-4 hover:underline md:mr-6 text-white" %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to "log out", login_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure to log out?" }, class: "mr-4 hover:underline md:mr-6 text-white" %>
                  </li>
                <% end %>
            </ul>
        </div>
        <hr class="my-4 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <span class="block text-sm sm:text-center text-white">© 2023 <a href="https://flowbite.com/" class="hover:underline">Flowbite™</a>. All Rights Reserved.</span>
    </div>
</footer>

